--Mesurer la latence CDC
SELECT TOP 50 start_lsn, tran_begin_time, tran_end_time, DATEDIFF(SECOND, tran_end_time, GETDATE()) AS LatencySeconds FROM cdc.lsn_time_mapping ORDER BY tran_end_time DESC;

--Mesurer la latence LOG
select
    [Current LSN],
    Operation,
    [Begin Time],
    [End Time]
from sys.fn_dblog(null, null)
